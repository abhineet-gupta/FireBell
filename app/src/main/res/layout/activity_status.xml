<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.firebell.Status"
    android:background="@color/sky">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/newOrange"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_main" />

    <TextView
        android:id="@+id/StatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:text="Status"
        android:textColor="@color/blue"
        android:textSize="25pt"/>

    <ScrollView
        android:id="@+id/sensorScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:fillViewport="false"
        android:scrollbars="none"
        android:layout_below="@+id/StatusTitle"
        android:layout_alignStart="@+id/StatusTitle"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="90dp"
        android:layout_alignEnd="@+id/bottom_navigation">

        <TableLayout
            android:id="@+id/sensor_data_table1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--android:layout_alignStart="@+id/StatusTitle"-->
            <!--android:layout_below="@+id/StatusTitle">-->
        </TableLayout>
    </ScrollView>

</RelativeLayout>
